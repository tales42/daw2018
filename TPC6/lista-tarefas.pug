extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-cyan
                h3 Lista de Tarefas
            .w3-container
                table.w3-table-all
                    tr
                        th Data de Registo
                        th Prazo de Conclusão
                        th Descrição
                        th Tipo
                        th
                    each tarefa in lista
                        if tarefa.concluida=="false"
                            tr
                                td= tarefa.dataRegisto
                                td= tarefa.dataConclusao
                                td= tarefa.descricao
                                td= tarefa.tipo
                                td
                                    form.w3-container(action='/tarefaConcluida' method='POST')
                                        input.w3-btn.w3-blue-grey(type='submit' name='eliminar' value=tarefa.id)
            footer.w3-container.w3-cyan
                address Gerado por FormApp
    br
    address 
        a(href="/") Voltar à página principal 